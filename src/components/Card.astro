---
import { Image } from "astro:assets";

interface Props {
  imgSrc: string;
  imgAlt: string;
  imgPriority: boolean;
  title: string;
  url: string;
  description: string | null;
}

const { imgSrc, imgAlt, imgPriority, title, url, description }: Props = Astro.props;
---

<a
  href={url}
  class="flex h-96 w-full cursor-pointer flex-col rounded-2xl bg-gray-700 pb-4 transition-all ease-in-out hover:scale-105 hover:shadow-2xl sm:w-96"
>
  <Image
    src={imgSrc}
    alt={imgAlt}
    width={400}
    height={300}
    style="height: 12rem; width: 100%; border-radius: 1rem; border-bottom-left-radius: 0; border-bottom-right-radius: 0;"
    priority={imgPriority}
    loading={imgPriority ? "eager" : "lazy"}
  />
  <div class="flex flex-col gap-4 p-4">
    <h2 class="font-mono text-2xl text-green-400">{title}</h2>
    <p>{description ?? ""}</p>
  </div>
</a>
